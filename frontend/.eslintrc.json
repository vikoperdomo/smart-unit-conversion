{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": ["projects/**/*", "*.html"],
    "plugins": ["@typescript-eslint", "prettier"],
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "prettier/prettier": "error"
    },
    "overrides": [
        {
            "files": ["*.component.ts"],
            "rules": {}
        }
    ]
}
