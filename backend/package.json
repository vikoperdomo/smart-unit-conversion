{
  "name": "backend",
  "version": "1.0.0",
  "description": "A Unit Conversion API for validating and grading temperature and volume conversions. Designed for science teachers to input and evaluate student responses.",
  "main": "index.js",
  "scripts": {
    "docs:generate": "typedoc --out docs src",
    "build": "tsc",
    "dev": "npx ts-node src/app.ts",
    "start": "NODE_ENV=production node ./dist/app.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": "20.18.1"
  },
  "keywords": [
    "unit-conversion",
    "temperature",
    "volume",
    "api",
    "education",
    "nodejs",
    "typescript",
    "swagger",
    "express",
    "jest",
    "eslint",
    "prettier"
  ],
  "author": "Viktor Perdomo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/unit-conversion-api"
  },
  "bugs": {
    "url": "https://github.com/your-repo/unit-conversion-api/issues"
  },
  "homepage": "https://github.com/your-repo/unit-conversion-api#readme",
  "dependencies": {
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.5",
    "typescript": "^5.7.2"
  }
}
